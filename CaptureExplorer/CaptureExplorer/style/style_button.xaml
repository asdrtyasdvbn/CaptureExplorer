    <Style TargetType="{x:Type CheckBox}" x:Key="check_but">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type CheckBox}">
                    <Border  x:Name="b"
                             Background="#00000000"
                             BorderThickness="1"
                             BorderBrush="#00000000">
                        <Grid Cursor="Hand">

                            <!--Define size of the Bullet-->

                            <!--The two borders-->
                            <Border x:Name="RadioOuter"
                                    BorderBrush="{DynamicResource sol_淺藍}"
                                    BorderThickness="2"
                                    CornerRadius="0"
                                    VerticalAlignment="Top"
                                    Height="14"
                                    Width="14"
                                    Panel.ZIndex="3"
                                    HorizontalAlignment="Left"
                                    Margin="-1,-1,0,0"
                                    Background="{DynamicResource sol_黑60}">
                                <Viewbox Stretch="Fill">
                                    <Polygon x:Name="TickMark"
                                             Points="4,9 8,15 15,3 8,11 4,9"
                                             Stroke="{DynamicResource sol_淺藍}"
                                             StrokeThickness="3"
                                             Visibility="Hidden"
                                             Height="18"
                                             Width="17"
                                             VerticalAlignment="Center"
                                             HorizontalAlignment="Center"
                                             Margin="1,0,0,0" />
                                </Viewbox>
                            </Border>

                            <Label Margin="0"
                                   Foreground="{DynamicResource sol_白}"
                                   FontFamily="Calibri"
                                   FontSize="18"
                                   Height="Auto"
                                   Width="Auto"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center">
                                <InlineUIContainer>
                                    <ContentPresenter />
                                </InlineUIContainer>
                            </Label>
                        </Grid>

                    </Border>

                    <!--If item is checked, trigger the visibility of the mark-->
                    <ControlTemplate.Triggers>

                        <!--選取後-->
                        <Trigger Property="IsChecked"
                                 Value="true">
                            <Setter TargetName="TickMark"
                                    Property="Visibility"
                                    Value="Visible" />
                            <!--<Setter TargetName="RadioOuter"
                                    Property="BorderBrush"
                                    Value="{DynamicResource sol_白}" />-->
                        </Trigger>

                        <!--移入-->
                        <Trigger Property="IsMouseOver"
                                 Value="true">
                            <Setter TargetName="b"
                                    Property="Background"
                                    Value="#194BC8FF" />
                            <Setter TargetName="b"
                                    Property="BorderBrush"
                                    Value="{DynamicResource sol_淺藍40}" />
                        </Trigger>

                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
   
    



