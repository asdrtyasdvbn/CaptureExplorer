                   Fill="#7F63FBFF"
                   VerticalAlignment="Top"
                   Height="20"
                   Stroke="#020FFFB7"
                   StrokeThickness="19"
                   Cursor="SizeNS" />
        <Rectangle x:Name="b_中下"
                   Fill="#7F63FBFF"
                   VerticalAlignment="Top"
                   Height="20"
                   Stroke="#020FFFB7"
                   StrokeThickness="19"
                   Cursor="SizeNS" />
