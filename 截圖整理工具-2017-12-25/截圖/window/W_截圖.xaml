                   Fill="#0000EB78"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Left" />
        <Rectangle x:Name="b_左上"
                   Fill="#3300FF8E"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Width="20"
                   Height="20"
                   RadiusX="20"
                   RadiusY="20"
                   Cursor="SizeAll"
                   Stroke="#FF02FF77" />
        <Rectangle x:Name="b_右上"
                   Fill="#3300FF8E"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Left"
                   Width="20"
                   Height="20"
                   RadiusX="20"
                   RadiusY="20"
                   Cursor="SizeAll"
                   Stroke="#FF02FF77" />
        <Rectangle x:Name="b_右下"
                   Fill="#3300FF8E"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Left"
                   Width="20"
                   Height="20"
                   RadiusX="20"
                   RadiusY="20"
                   Cursor="SizeAll"
                   Stroke="#FF02FF77" />
